<?xml version="1.0" encoding="utf-8"?>
<!-- 热门信息和城管新闻都用一样的item样式-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/item_frame"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5.0dip"
    android:layout_marginTop="5.0dip"
    android:background="@drawable/yuanjiao_only_one"
    android:paddingBottom="3.0dip"
    android:paddingLeft="3.0dip"
    android:paddingRight="3.0dip"
    android:paddingTop="5.0dip" >

    <ImageView
        android:id="@id/list_item_img"
        android:layout_width="73.0dip"
        android:layout_height="53.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/list_item_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7.0dip"
        android:layout_toRightOf="@id/list_item_img"
        android:src="@drawable/default_news" />

    <RelativeLayout
        android:id="@+id/list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_item_img"
        android:layout_marginLeft="7.0dip"
        android:layout_toRightOf="@id/list_item_img"
        android:paddingBottom="1.0dip" >

        <TextView
            android:id="@id/list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="这里是城管新闻标题"
            android:textAppearance="@style/list_title_style" />

        <TextView
            android:id="@id/list_item_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_title"
            android:lines="2"
            android:maxLength="30"
            android:text="这里是城管新闻的具体描述简介，可以点击之后查看详情"
            android:textAppearance="@style/list_desc_style" />

        <TextView
            android:id="@id/list_item_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/list_item_desc_title"
            android:layout_alignParentRight="true"
            android:textAppearance="@style/list_comment" />
    </RelativeLayout>

 

</RelativeLayout>