<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/item_frame"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5.0dip"
    android:layout_marginTop="5.0dip"
    android:background="@drawable/yuanjiao_only_one"
    android:paddingBottom="3.0dip"
    android:paddingLeft="3.0dip"
    android:paddingRight="3.0dip"
    android:paddingTop="5.0dip" >

    <ImageView
        android:id="@id/list_item_img"
        android:layout_width="73.0dip"
        android:layout_height="53.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/list_item_img"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/list_item_img"
        android:src="@drawable/default_news" />

    <TextView
        android:id="@id/list_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2.0dip"
        android:layout_toLeftOf="@id/list_item_triangle"
        android:text="状态"
        android:textAppearance="@style/list_comment"
        android:textColor="#FF0033"
        android:textSize="20.0sp" />

    <ImageView
        android:id="@id/list_item_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="1.0dip"
        android:layout_marginRight="1.0dip"
        android:background="@drawable/triangle"
        android:contentDescription="@string/hello" />

    <RelativeLayout
        android:id="@id/list_item_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_item_img"
        android:layout_marginLeft="7.0dip"
        android:layout_toLeftOf="@id/list_item_status"
        android:layout_toRightOf="@id/list_item_img"
        android:paddingBottom="1.0dip" >

        <TextView
            android:id="@id/list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="区域—类型"
            android:textAppearance="@style/list_title_style" />

        <TextView
            android:id="@id/list_item_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_title"
            android:lines="2"
            android:maxLength="20"
            android:text="问题的简单介绍和描述20个字的长度限制！"
            android:textAppearance="@style/list_desc_style" />
        <!--
        <TextView
            android:id="@id/list_item_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/list_item_desc_title"
            android:layout_alignParentRight="true"
            android:text="上报时间:2014-04-23"
            android:textAppearance="@style/list_comment" />
        -->
    </RelativeLayout>

</RelativeLayout>